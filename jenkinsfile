

          pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
        NEXUS_URL = '13.239.134.10:8081'
        NEXUS_REPO = 'spring-boot-app'
        NEXUS_CREDENTIALS_ID = 'nexus-credentials'
        ARTIFACT_VERSION = "1.0.${BUILD_NUMBER}-SNAPSHOT"
        DOCKER_IMAGE = "saranya/java:${ARTIFACT_VERSION}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Saranya-aws/java.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo "Building and testing Java project..."
                // Override Maven version with ARTIFACT_VERSION
                sh "${MAVEN_HOME}/bin/mvn clean package -Drevision=${ARTIFACT_VERSION}"
            }
        }

        stage('Upload to Nexus') {
            steps {
                echo "Uploading artifact to Nexus repository..."
                nexusArtifactUploader(
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    nexusUrl: "${NEXUS_URL}",
                    groupId: 'com.saranya',
                    version: "${ARTIFACT_VERSION}",
                    repository: "${NEXUS_REPO}",
                    credentialsId: "${NEXUS_CREDENTIALS_ID}",
                    artifacts: [
                        [
                            artifactId: 'sample-java',
                            classifier: '',
                            file: "target/sample-java-${ARTIFACT_VERSION}.jar",
                            type: 'jar'
                        ]
                    ]
                )
            }
        }

        stage('Check Docker Access') {
            steps {
                sh 'docker info'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    if (fileExists('Dockerfile')) {
                        echo "Building Docker image ${DOCKER_IMAGE}..."
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    } else {
                        echo "Dockerfile not found. Skipping Docker build."
                    }
                }
            }
        }

        stage('Scan Docker Image') {
            steps {
                echo "Scanning Docker image ${DOCKER_IMAGE} with Trivy..."
                sh """
                    trivy image --severity HIGH,CRITICAL --exit-code 1 ${DOCKER_IMAGE} > trivyimage.txt || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivyimage.txt', fingerprint: true
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "Pushing Docker image ${DOCKER_IMAGE} to Docker Hub..."
                    docker.withRegistry('https://index.docker.io/v1/', REGISTRY_CREDENTIALS) {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: "target/sample-java-${ARTIFACT_VERSION}.jar", fingerprint: true
            }
        }

    }

    post {
        success {
            echo "Build, Nexus upload, and Docker push succeeded! Version: ${ARTIFACT_VERSION}"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}

