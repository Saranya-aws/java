pipeline {
    agent any

    environment {
        // Optional: set Maven home if needed
        MAVEN_HOME = '/usr/share/maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the Git repository
                git branch: 'main', url: 'https://github.com/Saranya-aws/java.git'
            }
        }
stage('Uploading to Nexus') {
            steps {
                echo 'Uploading artifact to Nexus repository...'
                nexusArtifactUploader artifacts: [
                    [
                        artifactId: 'Sample-java',
                        classifier: '',
                        file: 'java/target/Sample-java-1.0.jar',
                        type: 'jar'
                    ]
                ],
                credentialsId: "${env.NEXUS_CREDENTIALS_ID}",
                groupId: 'com.saranya',
                nexusUrl: "${env.NEXUS_URL}",
                nexusVersion: 'nexus3',
                protocol: 'http',
                repository: "${env.NEXUS_REPO}",
                version: "${env.ARTIFACT_VERSION}"
            }
        }
        stage('Build') {
            steps {
                // Build the project using Maven
                sh "${MAVEN_HOME}/bin/mvn clean install"
            }
        }

        stage('Test') {
            steps {
                // Run tests (optional, Maven handles this during install)
                sh "${MAVEN_HOME}/bin/mvn test"
            }
        }

        stage('Archive') {
            steps {
                // Archive the generated JAR files
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
