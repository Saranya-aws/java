pipeline {
    agent any

    tools {
        maven 'Maven3'      // <-- Jenkins Maven tool name
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Saranya-aws/java.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully using Maven3!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
pipeline {
    agent any

    environment {
        NEXUS_URL  = "http://3.106.249.239:8081"
        NEXUS_REPO = "maven-hosted"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Test') {
            steps {
                sh "mvn test"
            }
        }

        stage('Deploy to Nexus') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'saranya',
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh """
                    mvn deploy \
                        -DskipTests \
                        -Dnexus.username=$NEXUS_USER \
                        -Dnexus.password=$NEXUS_PASS
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'saranya',
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh """
                    STATUS=\$(curl -u $NEXUS_USER:$NEXUS_PASS -s -o /dev/null -w "%{http_code}" \
                        $NEXUS_URL/repository/$NEXUS_REPO/org/codehaus/mojo/exec-maven-plugin/3.1.0/exec-maven-plugin-3.1.0.jar)

                    if [ \$STATUS -eq 200 ]; then
                        echo "Artifact successfully deployed to Nexus!"
                    else
                        echo "Deployment verification failed! HTTP status: \$STATUS"
                        exit 1
                    fi
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build, test, and deploy succeeded!'
        }
        failure {
            echo 'Pipeline failed. Check logs!'
        }
    }
}
