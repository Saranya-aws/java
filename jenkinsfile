pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
        NEXUS_URL = '3.107.183.117:8081'
        NEXUS_REPO = 'spring-boot-app'
        NEXUS_CREDENTIALS_ID = 'nexus-credentials'
        ARTIFACT_VERSION = "1.0.${BUILD_NUMBER}"
        DOCKER_IMAGE = "saranya/java:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('jenkins-push')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Saranya-aws/java.git'
            }
        }

        stage('Build') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn clean package"
            }
        }

        stage('Test') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn test"
            }
        }

        stage('Upload to Nexus') {
            steps {
                echo 'Uploading artifact to Nexus repository...'

                nexusArtifactUploader(
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    nexusUrl: "${NEXUS_URL}",
                    groupId: 'com.saranya',
                    version: "1.0-SNAPSHOT",
                    repository: "${NEXUS_REPO}",
                    credentialsId: "${NEXUS_CREDENTIALS_ID}",
                    artifacts: [
                        [
                            artifactId: 'sample-java',
                            classifier: '',
                            file: 'target/sample-java-1.0-SNAPSHOT.jar',
                            type: 'jar'
                        ]
                    ]
                )
            }
        }
     
                   stage('Check Docker Access') {
            steps {
                sh 'docker info'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh """
                echo "User: \$(whoami)"
                id
                groups

				cd java
                docker build -t ${DOCKER_IMAGE} .
                """
            }
        }

        stage('Scan Docker Image') {
            steps {
                echo 'Scanning Docker image using Trivy...'
                sh '''
                    trivy image --severity HIGH,CRITICAL --exit-code 1 ${DOCKER_IMAGE} > trivyimage.txt
                '''
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivyimage.txt', fingerprint: true
                }
            }
        }

        stage('Push Image') {
            steps {
                echo 'Pushing Docker image to registry...'
                script {
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io/v1/', 'jenkins-push') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build and upload succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
